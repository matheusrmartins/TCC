<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.PerfilAnimalActivity">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relativeLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linear_layout_toolbar">
            <include layout="@layout/toolbar"
                android:id="@+id/toolbar_perfil_animal" />

        </LinearLayout>


        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/scrollView"
            android:layout_below="@+id/linear_layout_toolbar"
            android:background="@drawable/fundo_degrade_aplicacao">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linear_layout1"
            android:background="@drawable/fundo_degrade_aplicacao">


            <ImageView
                android:id="@+id/imagem_perfil"
                android:layout_width="match_parent"
                android:layout_height="204dp"
                android:scaleType="fitCenter"
                android:padding="8dp"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="10dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/fundo_degrade_escuro"
                android:elevation="8dp"
                android:id="@+id/layout_menu_per_pet">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                <Button
                    android:text="Telefone"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/button2"
                    android:layout_alignParentLeft="true"
                    android:drawableBottom="@drawable/ic_call"
                    android:id="@+id/button_telefone" />

                <Button
                    android:text="Mensagem"
                    android:layout_weight="1"
                    android:layout_toLeftOf="@+id/button3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableBottom="@drawable/ic_message"
                    android:id="@+id/button_mensagem" />
                </LinearLayout>
            </RelativeLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linear_layout2"
                android:weightSum="1">



                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linear_layout3"
                    android:weightSum="1"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView1"
                        android:text="Descrição"
                        android:layout_marginTop="17dp"
                        android:paddingLeft="6dp"
                        android:textColor="@color/Preto"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView_descricao"
                        android:layout_marginTop="2dp"
                        android:paddingLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/Preto"
                        android:textSize="18sp"
                        />

                    <View style="@style/Divider"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:paddingLeft="6dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView2"
                        android:textColor="@color/Preto"
                        android:layout_marginTop="17dp"
                        android:textSize="20sp"
                        android:text="Tipo e genêro"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:paddingLeft="10dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView_tipo_genero"
                        android:textColor="@color/Preto"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="2dp"
                        android:textSize="18sp"/>

                    <View style="@style/Divider"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:paddingLeft="6dp"
                        android:textColor="@color/Preto"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView3"
                        android:layout_marginTop="17dp"
                        android:textSize="20sp"
                        android:text="Raça"
                        android:textStyle="bold"
                        />

                    <TextView
                    android:layout_width="match_parent"
                    android:paddingLeft="10dp"
                    android:textColor="@color/Preto"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_raca"
                    android:layout_marginTop="2dp"
                        android:layout_marginBottom="10dp"
                    android:textSize="18sp"
                    />


                    <View style="@style/Divider"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:paddingLeft="6dp"
                        android:textColor="@color/Preto"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView4"
                        android:layout_marginTop="17dp"
                        android:textSize="20sp"
                        android:text="Idade"
                        android:textStyle="bold"
                        />



                        <TextView
                            android:layout_width="match_parent"
                            android:id="@+id/textView_idade"
                            android:textColor="@color/Preto"
                            android:paddingLeft="10dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="10dp"
                            android:layout_height="match_parent"
                            android:textSize="18sp"/>


                    <View style="@style/Divider"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:paddingLeft="6dp"
                        android:textColor="@color/Preto"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView8"
                        android:layout_marginTop="17dp"
                        android:textSize="20sp"
                        android:text="Castrado"
                        android:textStyle="bold"
                        />

                    <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_castrado"
                        android:textColor="@color/Preto"
                    android:layout_marginTop="2dp"
                    android:paddingLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:textSize="18sp"/>

                    <View style="@style/Divider"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:paddingLeft="6dp"
                        android:textColor="@color/Preto"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView5"
                        android:layout_marginTop="17dp"
                        android:textSize="20sp"
                        android:text="Cidade"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView_cidade_estado"
                        android:textColor="@color/Preto"
                        android:layout_marginTop="2dp"
                        android:paddingLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:textSize="18sp"/>

                    <View style="@style/Divider"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:paddingLeft="6dp"
                        android:textColor="@color/Preto"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView6"
                        android:layout_marginTop="17dp"
                        android:textSize="20sp"
                        android:text="Vacinas"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView_vacinas"
                        android:textColor="@color/Preto"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="2dp"
                        android:paddingLeft="10dp"
                        android:textSize="18sp"/>


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        </ScrollView>





    </RelativeLayout>



</android.support.design.widget.CoordinatorLayout>

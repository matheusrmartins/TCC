<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/fundo_degrade_aplicacao"
    android:orientation="vertical"
    tools:context="com.parse.starter.activity.EditarPetActivity">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linear_layout1">
    <include layout="@layout/toolbar"
        android:id="@+id/toolbar_editar_pet" />

        <ImageView
            android:id="@+id/image_editar"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitCenter"
            android:padding="8dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="17.76" />
    </LinearLayout>


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/linear_layout1">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout3"
            android:weightSum="1">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayout4"
                android:weightSum="1"
                android:padding="5dp">

                <EditText
                    android:fontFamily="sans-serif"
                    android:layout_width="match_parent"
                    android:inputType="textCapSentences"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textColor="@android:color/white"
                    android:id="@+id/editText_nome_animal"
                    android:hint="Digite o nome do animal"
                    android:background="@drawable/fundo_caixa_texto"
                    android:padding="13dp"
                    android:layout_marginBottom="17dp"
                    android:layout_marginTop="18dp" />

                <Spinner
                    android:entries="@array/tipo_animal"
                    android:layout_width="match_parent"
                    android:padding="13dp"
                    android:background="@drawable/fundo_caixa_texto"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="17dp"
                    android:id="@+id/spinner_lista_Tipo"
                    android:dropDownWidth="match_parent"
                    android:layout_marginTop="17dp" />

                <Spinner
                    android:entries="@array/genero_animal"
                    android:layout_width="match_parent"
                    android:padding="13dp"
                    android:background="@drawable/fundo_caixa_texto"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner_lista_Genero"
                    android:layout_marginBottom="17dp"
                    android:dropDownWidth="match_parent"
                    android:layout_marginTop="17dp" />

                <Spinner
                    android:entries="@array/lista_raca_cachorro"
                    android:layout_width="match_parent"
                    android:padding="13dp"
                    android:background="@drawable/fundo_caixa_texto"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner_lista_raca"
                    android:layout_marginBottom="17dp"
                    android:dropDownWidth="match_parent"
                    android:layout_marginTop="17dp"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="17dp"
                    >

                    <Spinner
                        android:entries="@array/lista_ano"
                        android:id="@+id/spinner_lista_ano"
                        android:layout_width="70dp"
                        android:padding="13dp"
                        android:background="@drawable/fundo_caixa_texto"
                        android:layout_height="wrap_content"
                        android:dropDownWidth="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true" />

                    <TextView
                        android:text="Anos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView2"
                        android:textSize="18sp"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@id/spinner_lista_ano"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:text="Meses"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView4"
                        android:textSize="18sp"

                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/spinner_lista_mes"
                        android:layout_toEndOf="@+id/spinner_lista_mes"
                        android:layout_marginLeft="12dp"
                        android:layout_marginStart="12dp" />

                    <Spinner
                        android:entries="@array/lista_mes"
                        android:layout_width="70dp"
                        android:padding="13dp"
                        android:background="@drawable/fundo_caixa_texto"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinner_lista_mes"
                        android:dropDownWidth="match_parent"
                        android:layout_marginLeft="38dp"
                        android:layout_marginStart="38dp"
                        android:layout_alignTop="@+id/textView4"
                        android:layout_toRightOf="@+id/textView2"
                        android:layout_toEndOf="@+id/textView2" />



                </RelativeLayout>

                <CheckBox

                    android:text="Castrado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:id="@+id/castrado"
                    android:textSize="18sp"
                    android:buttonTint="@color/Preto"/>

                <Spinner
                    android:entries="@array/lista_estado"
                    android:layout_width="100dp"
                    android:padding="13dp"
                    android:background="@drawable/fundo_caixa_texto"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner_lista_estado"
                    android:dropDownWidth="match_parent"
                    android:layout_marginTop="17dp"
                    />

                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:padding="13dp"
                    android:background="@drawable/fundo_caixa_texto"
                    android:layout_height="wrap_content"
                    android:id="@+id/lista_cidade"
                    android:hint="Digite a cidade do animal"
                    android:dropDownWidth="match_parent"
                    android:layout_marginTop="17dp"
                    />

                <Button
                    android:text="Escolher foto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/botao_foto"
                    android:layout_marginTop="17dp"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:height="100dp"
                    android:inputType="textMultiLine"
                    android:hint="Digite a descrição do animal"
                    android:background="@drawable/fundo_caixa_texto"
                    android:ems="10"
                    android:id="@+id/editText_descricao"
                    android:gravity="start"
                    android:padding="8dp"
                    android:layout_marginTop="17dp"
                    />


            </LinearLayout>

            <Button
                android:text="Atualizar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:id="@+id/botao_atualizar"
                android:background="@drawable/fundo_botao"
                android:padding="13dp"
                android:layout_marginTop="17dp"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
